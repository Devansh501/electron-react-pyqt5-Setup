{
  "name": "electron-react-python",
  "private": true,
  "version": "1.0.0",
  "description": "Hybrid Electron + React + Python App",
  "author": "Your Name",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none npm run react:start\" \"npm run electron:start\"",
    "react:start": "vite",
    "react:build": "vite build",
    "electron:start": "wait-on tcp:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    
    "dist:win": "npm run react:build && electron-builder --win",
    "dist:linux": "npm run react:build && electron-builder --linux",
    "dist:all": "npm run react:build && electron-builder --win --linux"
  },
  "build": {
    "appId": "com.yourname.hybridapp",
    "productName": "HybridApp",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**/node_modules/zeromq/**/*"
    ],
    "extraResources": [
      {
        "from": "py_dist/backend",
        "to": "backend",
        "filter": ["!**/*.exe"] 
      },
      {
        "from": "py_dist/backend.exe",
        "to": "backend.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development",
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zeromq": "^6.0.0-beta.6"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^4.3.0",
    "wait-on": "^7.0.1"
  }
}